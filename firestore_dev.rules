rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Development environment rules for apiclientapp project
    // These rules are more permissive for development purposes
    
    // Allow read/write access to all collections for authenticated users in development
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Sessionizer collections with environment-based structure
    // Structure: sessionizer/DevData/{collection}/{document}
    match /sessionizer/DevData/{collection}/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Notifications: Users can only access their own notifications
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null && 
        resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && 
        request.resource.data.userId == request.auth.uid;
    }
    
    // Mail collection for Firebase Trigger Email extension
    match /mail/{mailId} {
      allow create: if request.auth != null;
      allow read, write: if false; // Only the extension should read/write
    }
  }
}
