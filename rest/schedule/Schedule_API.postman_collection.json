              "path": ["api", "v1", "schedules", "search"],
              "query": [
                {
                  "key": "q",
                  "value": "{{search_query}}",
                  "description": "Search query"
                },
                {
                  "key": "instructorId",
                  "value": "{{instructor_id}}",
                  "description": "Filter by instructor ID"
                },
                {
                  "key": "name",
                  "value": "{{name}}",
                  "description": "Filter by name"
                },
                {
                  "key": "isDefault",
                  "value": "{{is_default}}",
                  "description": "Filter by default status"
                },
                {
                  "key": "page",
                  "value": "1",
                  "description": "Page number"
                },
                {
                  "key": "limit",
